@model List<OurPlace.Models.Notification.NotificationOverviewModel>
@{
    ViewData["Title"] = "Overview";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Notifications.css" />
}

<div class="container">
    <h3>My notifications</h3>
    <hr />
    <br />
    @if (Model.Count == 0)
    {
        <h3>Notification box is empty</h3>
    }
    else
    {
        @foreach (var not in Model)
        {
            <div class="notContainer">
                <div class="sectionContainer">
                    <header>@not.Message</header>
                    @if (not.Type == OurPlace.Data.NotificationType.FriendRequest)
                    {
                        <a class="btn btn-success" asp-controller="Friend" asp-action="CreateFriends" asp-route-senderId="@not.SenderId" asp-route-userId="@not.UserId">Accept</a>
                        <a class="btn btn-danger" asp-controller="Notification" asp-action="DeclineFriendRequest" asp-route-senderId="@not.SenderId" asp-route-userId="@not.UserId">Decline</a>
                    }
                </div>
                <span>Notification sent on: @not.DateSent.ToString("MMMM, dd yyyy, HH:mm")</span>
            </div>
        }
    }
</div>

